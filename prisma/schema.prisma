generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}



model Admin {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  adminId   String?  @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  email     String? 
  name      String
}

model Project {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  title     String? 
  category  String
  note      String
  tags      String[]
  imgUrl    String[]
  githublink String
  livelink  String
  pointers  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
}
model Achievement {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  title     String? 
  imgUrl    String[]
  date      DateTime
  createdAt DateTime  @default(now())
}

model Testimonials {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String 
  email     String
  company   String
  job_title String
  message   String
  imgUrl    String 
  anonymous Boolean
  createdAt DateTime  @default(now())
}
