generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}



model Admin {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  adminId   String?  @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  email     String? 
  name      String
}

model Project {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  title     String? 
  note      String
  tags      String[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
}
